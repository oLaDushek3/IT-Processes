<UserControl x:Class="ITProcesses.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:ITProcesses.Views"
             xmlns:hellpers="clr-namespace:ITProcesses.Resources"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:ITProcesses.ViewModels"
             d:DesignHeight="720" d:DesignWidth="1280">
    
    <UserControl.DataContext>
        <viewModels:MainViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Header title-->
        <Border Grid.Row="0"
                BorderThickness="0 0 0 3"
                BorderBrush="{DynamicResource primaryStrokeColorBrush}">
            
            <Image Source="/Resources/BigLogo.png" Margin="10"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" MinWidth="120" MaxWidth="520"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
                    <!--Navigation menu-->
        <Border Grid.Column="0">
            <StackPanel Height="500">

                <RadioButton HorizontalAlignment="Center" VerticalAlignment="Center"
                             Style="{DynamicResource MenuButton}"
                             Tag="{DynamicResource TaskList}"
                             Content="Мои задачи"/>
                
                <RadioButton HorizontalAlignment="Center" VerticalAlignment="Center"
                             Style="{DynamicResource MenuButton}"
                             Tag="{DynamicResource TaskList}"
                             Content="Мои задачи"/>

                <ScrollViewer hellpers:ScrollViewerHelper.ShiftWheelScrollsHorizontally="True">
                    <TreeView Height="300" Padding="10">
                    <TreeViewItem Header="Taskgfdddddddddd" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Header="Task" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Header="Tasks" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                        <TreeViewItem Header="Task" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                        <TreeViewItem Header="Task2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                        <TreeViewItem Header="Task3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                            <TreeViewItem Header="Task3.1" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                            <TreeViewItem Header="Task3.2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                            <TreeViewItem Header="Task3.3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                            <TreeViewItem Header="Task3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                                <TreeViewItem Header="Task3.1" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                <TreeViewItem Header="Task3.2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                <TreeViewItem Header="Task3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                                    <TreeViewItem Header="Task3.1" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Task3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                                    <TreeViewItem Header="Task3.1" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Task3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}">
                                    <TreeViewItem Header="Task3.1" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.2" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                    <TreeViewItem Header="Task3.3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Task3.3" Tag="{DynamicResource TaskList}" Style="{StaticResource TreeViewItemStyle}"/>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
                </ScrollViewer>
                
            </StackPanel>
        </Border>
        <GridSplitter Grid.Column="1"
                      Width="2"
                      Background="{DynamicResource primaryStrokeColorBrush}"
                      HorizontalAlignment="Center"/>
            
        </Grid>
        
    </Grid>
