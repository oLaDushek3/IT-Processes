<Window x:Class="ITProcesses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:ITProcesses"
        xmlns:viewModels="clr-namespace:ITProcesses.ViewModels"
        xmlns:views="clr-namespace:ITProcesses.Views"
        mc:Ignorable="d"
        Title="IT-Processes" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource primaryBackColorBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
            <views:MainView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <ContentControl Content="{Binding CurrentChildView}"/>
    </Grid>
</Window>